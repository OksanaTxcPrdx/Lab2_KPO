<Window x:Class="Lab2_KPO.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_KPO"
        xmlns:viewModels="clr-namespace:Lab2_KPO.ViewModels"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="450">
    <Window.DataContext>
        <viewModels:CalculatorViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="SquareButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFAFA" />

            <Setter Property="Foreground" Value="#474A51" />

            <Setter Property="BorderBrush" Value="#808080" />

            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="Malgun Gothic Semilight" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width">
                <Setter.Value>
                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}" />
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
        <Style x:Key="RectangularButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="SquareButtonStyleOperations" TargetType="Button">
            <Setter Property="Background" Value="#F0FFFF" />

            <Setter Property="Foreground" Value="#00008B" />

            <Setter Property="BorderBrush" Value="#6495ED" />

            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="Malgun Gothic Semilight" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width">
                <Setter.Value>
                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}" />
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#CADABA" />
            <Setter Property="Foreground" Value="#FF212121" />
            <Setter Property="BorderBrush" Value="#FFBDBDBD" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Padding" Value="10,5,10,5" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10" >

                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>
    <Grid>
        <TextBox x:Name="tbInputExpression" Style="{StaticResource RoundedTextBoxStyle}"
                 VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="89,10,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="292" Height="53"
                 HorizontalScrollBarVisibility="Auto" TextChanged="tbInputExpression_TextChanged"/>
        <TextBox x:Name="tbResult" Style="{StaticResource RoundedTextBoxStyle}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="273,70,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="108" Height="29" />

        <Grid Margin="75,110,69,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Button x:Name="btnClear" Command="{Binding ClearCommand}" Style="{StaticResource SquareButtonStyle}" Margin="3,2,2,0" Grid.Row="4" Content="С"
                    Click="BtnClear_Click" />
            <Button x:Name="btnDivision" Command="{Binding AddCharCommand}" CommandParameter="/" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="0" Grid.Column="1" Content="÷"  FontSize="36" Click="BtnDivision_Click" />
            <Button x:Name="btnMultiplication" Command="{Binding AddCharCommand}" CommandParameter="*" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="0" Grid.Column="2" Content="×"  FontSize="36" Click="BtnMultiplication_Click" />
            <Button x:Name="btnBackSpace" Command="{Binding BackspaceCommand}" Style="{StaticResource SquareButtonStyleOperations}"  Margin="1" Grid.Row="0" Grid.Column="3" Content="⌫"  BorderThickness="1,1,1,1"
                    Click="BtnBackSpace_Click" />

            <Button x:Name="btn7" Command="{Binding AddCharCommand}" CommandParameter="7" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="1" Grid.Column="0" Content="7"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn8" Command="{Binding AddCharCommand}" CommandParameter="8" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="1" Grid.Column="1" Content="8"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn9" Command="{Binding AddCharCommand}" CommandParameter="9" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="1" Grid.Column="2" Content="9"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btnSubtraction" Command="{Binding AddCharCommand}" CommandParameter="-" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="1" Grid.Column="3" Content="-"  FontSize="36" Click="btnSubtraction_Click" />

            <Button x:Name="btn4" Command="{Binding AddCharCommand}" CommandParameter="4" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="2" Grid.Column="0" Content="4"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn5" Command="{Binding AddCharCommand}" CommandParameter="5" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="2" Grid.Column="1" Content="5"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn6" Command="{Binding AddCharCommand}" CommandParameter="6" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="2" Grid.Column="2" Content="6"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btnSummation" Command="{Binding AddCharCommand}" CommandParameter="+" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="2" Grid.Column="3" Content="+"
                    FontSize="36" Click="btnSummation_Click" />

            <Button x:Name="btn1" Command="{Binding AddCharCommand}" CommandParameter="1" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="3" Grid.Column="0" Content="1"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn2" Command="{Binding AddCharCommand}" CommandParameter="2" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="3" Grid.Column="1" Content="2"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btn3" Command="{Binding AddCharCommand}" CommandParameter="3" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="3" Grid.Column="2" Content="3"
                    Click="BtnNumber_Click"/>
            <Button x:Name="btnOpenBracket" Command="{Binding AddCharCommand}" CommandParameter="(" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="3" Grid.Column="3" Content="("
                    Click="btnOpenBracket_Click"/>

            <Button x:Name="btnExponential" Command="{Binding AddCharCommand}" CommandParameter="^" Style="{StaticResource SquareButtonStyleOperations}" Margin="4,0,2,2" Grid.Column="0" Content="xʸ" Click="btnExponential_Click"/>
            <Button x:Name="btn0" Command="{Binding AddCharCommand}" CommandParameter="0" Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="4" Grid.Column="1" Content="0"
                    Click="BtnNumber_Click" />
            <Button x:Name ="btnPointBracket" Command="{Binding AddCharCommand}" CommandParameter="," Style="{StaticResource SquareButtonStyle}" Margin="1" Grid.Row="4" Grid.Column="2" Content=","
                    Click="btnPointBracket_Click" />
            <Button x:Name="btnCloseBracket" Command="{Binding AddCharCommand}" CommandParameter=")" Style="{StaticResource SquareButtonStyleOperations}" Margin="1" Grid.Row="4" Grid.Column="3" Content=")"
                    Click="btnCloseBracket_Click"/>

        </Grid>

    </Grid>
</Window>
